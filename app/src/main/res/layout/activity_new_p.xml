<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gardientbackground"
    tools:context="com.example.user.alphatest.newP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="30dp"
                android:textColor="#fff"
                app:fontFamily="@font/disposabledroidbb"/>

            <Space
                android:layout_width="120dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/theemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="enter your email"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number:"
                android:textSize="30dp"
                android:textColor="#fff"
                app:fontFamily="@font/disposabledroidbb"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/thephoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="enter your mentor's phone number"
                android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/sendC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendM"
            android:text="send" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The code:"
                android:textSize="30dp"
                android:textColor="#fff"
                app:fontFamily="@font/disposabledroidbb"/>

            <Space
                android:layout_width="75dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/theCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="enter the code that has been sent to the phone"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/checkC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkC"
            android:text="enter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New password:"
                android:textSize="30dp"
                android:textColor="#fff"
                app:fontFamily="@font/disposabledroidbb"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/thenewP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="enter your new password"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/newP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="next"
            android:text="next" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="7"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="backtostart"
        android:text="back" />
</LinearLayout>
